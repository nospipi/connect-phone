{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "cms#dev": {
      "dependsOn": ["cms#clean", "database#build"]
    },
    "mui-cms#dev": {
      "dependsOn": ["mui-cms#clean", "database#build"]
    },
    "tremor-cms#dev": {
      "dependsOn": ["tremor-cms#clean", "database#build"]
    },
    "api#dev": {
      "dependsOn": ["database#build", "database#generate"]
    }
  },
  "globalEnv": ["DATABASE_URL", "DIRECT_URL"]
}
